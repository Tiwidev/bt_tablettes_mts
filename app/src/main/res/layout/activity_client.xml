<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thomas_dieuzeide.myapplication.FragmentPage">

    <AutoCompleteTextView
        android:id="@+id/editTextClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Code Client"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_marginTop="90dp"
        android:layout_toStartOf="@+id/textView" />

    <AutoCompleteTextView
        android:id="@+id/editTextClientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nom Client"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@+id/textView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Informations client"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorHighlight="@color/abc_background_cache_hint_selector_material_dark"
        android:textSize="@dimen/abc_text_size_large_material" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLieu"
        android:hint="Lieu de prestation"
        android:layout_below="@+id/editTextClient"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETOUR"
        android:id="@+id/buttonclient"
        android:layout_marginTop="102dp"
        android:layout_below="@+id/editTextLieu"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouveau Client"
        android:id="@+id/checkbox"
        android:layout_alignTop="@+id/editTextClient"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nom Contact"
        android:ems="10"
        android:layout_marginTop="45dp"
        android:id="@+id/editTextContact"
        android:layout_below="@+id/checkbox"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
